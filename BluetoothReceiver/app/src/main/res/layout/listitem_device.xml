<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/background"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">

	<ImageView android:id="@+id/device_icon"
	           android:layout_width="50dp"
	           android:layout_height="50dp"
	           android:src="@mipmap/unknown_text"/>


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Name"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>
			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="BSSID"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="UUID"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Temp."
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Major"
				android:layout_below="@+id/linearLayout"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>


		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout2"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/linearLayout"
			android:layout_marginStart="8dp">

			<TextView android:id="@+id/device_name"
			          android:text="Device_Name"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:textSize="12dp"/>

			<TextView android:id="@+id/device_bssid"
				          android:text="Device_BSSID"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Device_UUID"
				android:id="@+id/device_uuid"
				android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Device_Temp"
				android:id="@+id/device_temp"
				android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Device_Major"
				android:id="@+id/device_major"
				android:layout_alignBottom="@+id/textView2"
				android:layout_alignStart="@+id/linearLayout2"
				android:textSize="12dp"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout3"
		    android:layout_centerHorizontal="true"
			>

			<TextView
				android:id="@+id/textView6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="RSSI"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Hum."
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>

			<TextView
				android:id="@+id/textView10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Minor"
				android:layout_below="@+id/linearLayout"
				android:textSize="12dp"
				android:textColor="#aaaaaa"/>


		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout4"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/linearLayout3"
			android:layout_marginStart="8dp">

			<TextView android:id="@+id/device_rssi"
			          android:text="Device_RSSI"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:textSize="12dp"/>

			<TextView android:id="@+id/textView11"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/textView12"
				android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Device_Hum"
				android:id="@+id/device_hum"
				android:textSize="12dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Device_Minor"
				android:id="@+id/device_minor"
				android:layout_alignBottom="@+id/textView2"
				android:layout_alignStart="@+id/linearLayout2"
				android:textSize="12dp"/>
		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
